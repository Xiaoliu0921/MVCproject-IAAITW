                                        <ul class="dropdown-menu" role="menu">
                                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "About"&&ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                                                <a href="@Url.Action("Index","About")">協會介紹</a>
                                            </li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Organization" ? "active" : "")">
