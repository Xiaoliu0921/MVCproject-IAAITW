                                            </li>
                                        </ul>
                                    </li>
                                    <li class="dropdown @(ViewContext.RouteData.Values["controller"].ToString() == "Contact" ? "active" : "")">
                                        <a href="@Url.Action("Index","Contact")" class="dropdown-toggle" data-toggle="dropdown" title="聯絡我們">聯絡我們 <i class="fa fa-angle-down"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Contact"&&ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                                                <a href="@Url.Action("Index","Contact")">聯絡我們</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul><!--/ Nav ul end -->

                            </div><!--/ Collapse end -->

                        </div><!-- Site Navbar inner end -->


                    </div><!--/ Col end -->
                </div><!--/ Row end -->
