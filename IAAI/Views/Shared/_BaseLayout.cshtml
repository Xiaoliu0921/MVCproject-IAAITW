                                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Services"&&ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                                                <a href="@Url.Action("Index","Services")">協會業務</a>
                                            </li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Licenses" ? "active" : "")">
                                                <a href="@Url.Action("Licenses","Services")">訓練、認證、發照</a>
                                            </li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Refer" ? "active" : "")">
                                                <a href="@Url.Action("Refer","Services")">諮詢、顧問</a>
                                            </li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Survey" ? "active" : "")">
                                                <a href="@Url.Action("Survey","Services")">縱火調查</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="dropdown @(ViewContext.RouteData.Values["controller"].ToString() == "Knowledge" ? "active" : "")">
